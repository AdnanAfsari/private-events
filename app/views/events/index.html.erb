<div class="row">
<aside class="col-md-12">
<section class="user_info">

<h3><%= link_to "Create new", new_event_path %></h3>
<h3>Upcoming Events (<%= @upcoming_events.count %>)</h3>
<% if @upcoming_events.any? %>
  <div class="events">
    <% @upcoming_events.each do |event| %>
      <%= link_to  event_path(event) do %>
        <div class="event">
          <span class="name"><%=  event.name%></span>
          <span><%= event.creator.name %></span>
          <span class="description"><%= event.description %></span>
          <span class="dateofevent">Date: <%= event.dateofevent %></span>
          <span class="location">Location: <%= event.location %></span>


          <span class="timestamp">
              Posted <%= time_ago_in_words(event.created_at) %> ago.
          </span>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<h3>Previous Events (<%= @previous_events.count %>)</h3>
<% if @previous_events.any? %>
  <div class="events">
      <% @prevous_events.each do |event| %>
      <div class="event">
        <li><%= link_to previous_event.name, previous_event %>, date: <%= previous_event.dateofevent %></li>
      </div>
      <% end %>
  </div>
<% end %>







  </section>
  </aside>
</div>
